<%- include('partials/headerloggedin') -%>
  <div class="container mx-auto min-h-screen bg-red-300">
      <div class="flex justify-around p-20">
        <button onclick="openInitalForm()" class="px-6 py-3 text-lg bg-slate-700 text-white">Create</button>
        <p>Profile info here</p>
      </div>
      <div class="flex justify-center">
        <p>Your Plans</p>
      </div>
      <div class="flex flex-wrap justify-center">
          <% for(var i = 0; i < posts.length; i++) {%>
            <div class="border m-4 text-center w-48 h-40 flex items-start justify-center">
              <a href="/post/<%= posts[i]._id%>">
                <div>
                  <h2>Strength</h2>
                </div>
                <div>
                <h2><%= posts[i].title%></h2>
                </div>
              </a>
            </div>
        <% } %>
      </div>

<!-- The Inital Form -->
<div class="hidden fixed" id="initalForm">
  <div class="flex flex-wrap justify-center items-center border">
    <div>
      <button class="border p-16 m-4" onclick="openStrengthForm()">Strength</button>
    </div>
    <div>
      <button class="border p-16 m-4" onclick="">Cardio</button>
    </div>
    <div>
      <button class="border p-16 m-4" onclick="">Yoga</button>
    </div>
  </div>
</div>

<div class="hidden" id="strengthForm">
  <div class="">
    <form action="/post/createPost" method="POST" class="">
      <legend>Strength Plan</legend>
      <div>
        <label for="title">Plan title: </label>
        <input type="text" placeholder="name" name="title">
      </div>

      <div class="exerciseInput">
        <label for="fullworkout" class="exerciseLabel">Exercise: </label>
        <input type="text" placeholder="Exercise name" class="exercise" name="exercise">
        <input type="number" placeholder="# of sets" class="sets" name="sets">
        <input type="number" placeholder="# of reps" class="reps" name="reps">
      </div>

      <div>
        <textarea placeholder="Description" id="description" name="description"></textarea>
      </div>
      
      <button type="submit" class="" value="Upload">Submit</button>
    </form>
    <button class="addexercise">ADD+</button>

  </div>
</div>

<!-- <button type="button" class="btn cancel" onclick="closeForm()">Close</button> -->

</div>
